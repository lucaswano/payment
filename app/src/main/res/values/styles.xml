<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@android:color/holo_blue_bright</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="normal_tv">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_title_dialog" parent="normal_tv">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_content_dialog" parent="normal_tv">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="text_view_dialog_button">
        <item name="android:textColor">#1E88FE</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="standardTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_larger</item>
        <item name="android:paddingRight">@dimen/space_larger</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="actionbarTitle" parent="standardTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edt_login">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/space_large</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="appTablayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="tabSelectedTextColor">@color/yellow</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

</resources>
